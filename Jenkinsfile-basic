#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                    echo "$BUILD_ID"
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                    echo "$EXECUTOR_NUMBER"
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                    echo "$JOB_NAME"
                    echo "$BUILD_ID"
                    echo "$EXECUTOR_NUMBER"
                }
            }
        }
    }
}
