pipeline{
    agent any
    stages{
        stage ('Pull Code from GutHub'){
            steps{
                sh '''
                  ls -lah
                  mvn --version
                '''
            }
        }
        stage ('Package and Test Code'){
            steps{
                sh '''
                  mvn test
                  mvn package
                '''
            }
        }
        stage ('Build and Push Docker Images'){
            steps{
                sh '''
                   docker build -t bagrat92/java-maven-app:${BUILD_ID} .
                   docker push bagrat92/java-maven-app:${BUILD_ID}
                '''
            }
        }
    }
}
