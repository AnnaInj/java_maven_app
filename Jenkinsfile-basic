pipeline{
    agent any
    stages{
        stage ('Build Code'){
            steps{
                sh '''
                  ls -lah
                  mvn --version
                '''
            }
        }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
  }
}
